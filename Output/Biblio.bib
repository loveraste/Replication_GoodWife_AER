@article{abadie2006large,
	Abstract = {Matching estimators for average treatment effects are widely used in evaluatio search despite the fact that their large sample properties have not been establish many cases. The absence of formal results in this area may be partly due to the that standard asymptotic expansions do not apply to matching estimators with a number of matches because such estimators are highly nonsmooth functionals of data. In this article we develop new methods for analyzing the large sample prop of matching estimators and establish a number of new results. We focus on mat with replacement with a fixed number of matches. First, we show that matching mators are not N1/2-consistent in general and describe conditions under which m ing estimators do attain N1/2-consistency. Second, we show that even in settings matching estimators are N1/2-consistent, simple matching estimators with a fixed ber of matches do not attain the semiparametric efficiency bound. Third, we pro consistent estimator for the large sample variance that does not require consistent parametric estimation of unknown functions. Software for implementing these m is available in Matlab, Stata},
	Author = {Abadie, Alberto and Imbens, Guido W},
	Journal = {Econometrica},
	Keywords = {Matching estimators, average treatment effects, unconfoundedness lection on observables, potential outcomes},
	Number = {1},
	Pages = {235--267},
	Publisher = {Wiley Online Library},
	Title = {Large sample properties of matching estimators for average treatment effects},
