@article{lowes2018matrilineal,
	Abstract = {I examine how matrilineal relative to patrilineal kinship systems and gender affect willingness to compete among individuals from societies in Central Africa. Individuals completed an experimen- tal task under piece rate pay, tournament pay, and a payment scheme of their choice. 80% of men and 60% of women chose tournament pay, a standard measure of willingness to compete. I find no evidence that matrilineal kinship closes the gender gap in competition. Women from matrilineal and patrilineal societies are much less likely to compete than men. Using physiological data, I find that women who experience greater stress in the tournament round relative to the piece rate round are less likely to choose competition and that this can partially explain the gender gap.},
	Author = {Lowes, Sara},
	Journal = {Working Paper},
	Title = {Matrilineal Kinship and Gender Differences in Competition},
	Year = {2018}}

