@article{hansen2015modern,
	Abstract = {This research proposes the hypothesis that societies with long histories of agri- culture have less equality in gender roles as a consequence of more patriarchal values and beliefs regarding the proper role of women in society. We test this hypothesis in a world sample of countries, in a sample of European regions, as well as among immigrants and children of immigrants living in the US. This evidence reveals a significant negative relation- ship between years of agriculture and female labor force participation rates, as well as other measures of equality in contemporary gender roles. This finding is robust to the inclusion of an extensive set of possible confounders, including historical plough-use and the length of the growing season. We argue that two mechanisms can explain the result: (1) societies with longer agricultural histories had a higher level of technological advancement which in the Malthusian Epoch translated into higher fertility and a diminished role for women outside the home; (2) the transition to cereal agriculture led to a division of labor in which women spend more time on processing cereals rather than working in the field.},
	Author = {Hansen, Casper Worm and Jensen, Peter Sandholt and Skovsgaard, Christian Volmar},
	Journal = {Journal of Economic Growth},
	Keywords = {Economic development, Culture, Gender roles},
	Number = {4},
	Pages = {365--404},
	Publisher = {Springer},
	Title = {Modern gender roles and agricultural history: the Neolithic inheritance},
	Volume = {20},
	Year = {2015}}

@article{henderson2014pacification,
	Abstract = {We combine the date-of-observation found in Murdock's Ethnographic Atlas and a newly-constructed dataset on the date-of-colonization at the ethnic-group level to study the effects of the duration of colonial rule on a variety of political, economic, and social characteristics of ethnic groups in Africa. We find that the duration of colonial rule is correlated with a dramatic shift in gender roles in Africa by increasing the relative status of men in lineage and inheritance systems but also reducing polygyny as a marriage system. A causal role for the duration of colonial rule is confirmed by a difference-in-difference analysis that uses never-colonized ethnic groups as a control group and by an analysis of changes in kinship terminology that tests for within-group changes in descent and inheritance rules. We are able to rule out missionary influe1nce and Islam as mechanisms for these effects.},
	Author = {Henderson, Morgan and Whatley, Warren},
	Journal = {Working Paper},
	Keywords = {Colonialism, Africa, Property Rights, Gender, Family Structure},
	Title = {Pacification and gender in colonial Africa: evidence from the Ethnographic Atlas},
	Year = {2014}}

@article{alesinaferrara,
	Abstract = {We survey and assess the literature on the positive and negative effects of ethnic diversity on economic policies and outcomes. Our focus is on communities of different size and organizational structure, such as countries, cities in developed countries, and villages and groups in developing countries. We also consider the endogenous formation of political jurisdictions and highlight several open issues in need of further research, in particular the endogenous formation of ethnic identity and the measurement of ethnic diversity.},
	Author = {Alberto Alesina and Eliana La Ferrara},
	Journal = {Journal of Economic Literature},
	Number = {3},
	Pages = {762--800},
	Title = {Ethnic Diversity and Economic Performance},
	Volume = {43},
	Year = {2005}}

@article{alesina2003fractionalization,
	Abstract = {We provide new measures of ethnic, linguistic, and religious fractionalization for about 190 countries. These measures are more comprehensive than those previously used in the economics literature and we compare our new variables with those previously used. We also revisit the question of the effects of ethnic, linguistic, and religious heterogeneity on the quality of institutions and growth. We partly con{\textregistered}rm and partly modify previous results. The patterns of cross-correlations between potential explanatory variables and their different degree of endogeneity makes it hard to make unquali{\textregistered}ed statements about competing explanations for economic growth and the quality of government. Our new data, which features the underlying group structure of ethnicities, religions and languages, also allows the computation of alternative measures of heterogeneity, and we turn to measures of polarization as an alternative to the commonly used index of fractionalization.},
	Author = {Alesina, Alberto and Devleeschauwer, Arnaud and Easterly, William and Kurlat, Sergio and Wacziarg, Romain},
	Journal = {Journal of Economic Growth},
	Keywords = {ethnic heterogeneity, growth, government quality},
